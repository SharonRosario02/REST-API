<%- include("layout/header")%>

<div class="container">
  <div class="row">
    <div class="col-lg-6 mx-auto mt-4">
      <div class="card shadow">
        <div class="card-header bg-primary">
          <h3 class="text-light">add new users</h3>
        </div>
        <div class="card-body p-4">
          <form
            action="/add"
            method="post"
            id="add-form"
            enctype="multipart/form-data"
          >
            <div class="mb-3">
              <label for="name">Name</label>
              <input
                type="text"
                name="name"
                class="form-control form-control-lg"
                placeholder="Enter name"
                required
              />
            </div>
            <div class="mb-3">
              <label for="email">Email</label>
              <input
                type="email"
                name="email"
                class="form-control form-control-lg"
                placeholder="Enter Email"
                required
              />
            </div>
            <div class="mb-3">
              <label for="name">phone</label>
              <input
                type="tel"
                name="phone"
                class="form-control form-control-lg"
                placeholder="Enter ph_no"
                required
              />
            </div>
            <div class="mb-3">
              <label for="name" class="form-label">select image</label>
              <input
                type="file"
                class="form-control form-control-lg"
                name="image"
                required
              />
            </div>
            <div class="mb-3 d-grid">
              <input
                type="submit"
                name="submit"
                value="Add user"
                class="btn btn-primary btn-ig"
              />
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include("layout/footer")%>
